        function AppStoreMonitor() {
            const apps = DEFAULT_APPS; // ‰ΩøÁî®Âõ∫ÂÆöÊ∏ÖÂñÆ
            const [appsData, setAppsData] = useState({});
            const [loading, setLoading] = useState({});
            const [lastUpdated, setLastUpdated] = useState(null);
            const [searchQuery, setSearchQuery] = useState('');
            const [checkingProgress, setCheckingProgress] = useState({ current: 0, total: 0 });

            const extractAppId = (url) => {
                const match = url.match(/id(\d+)/);
                return match ? match[1] : null;
            };

            const fetchAppInfo = async (app) => {
                setLoading(prev => ({ ...prev, [app.id]: true }));
                
                const startTime = Date.now(); // Ë®òÈåÑÈñãÂßãÊôÇÈñì
                
                try {
                    // ‰ΩøÁî® iTunes Lookup API
                    const response = await fetch(`https://itunes.apple.com/lookup?id=${app.id}&country=tw&lang=zh_tw`);
                    const data = await response.json();
                    
                    if (data.resultCount === 0) {
                        throw new Error('Êâæ‰∏çÂà∞Ê≠§ App');
                    }

                    const appInfo = data.results[0];
                    
                    // Ê†ºÂºèÂåñÊó•Êúü
                    const releaseDate = new Date(appInfo.currentVersionReleaseDate);
                    const formattedDate = releaseDate.toLocaleDateString('zh-TW', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });

                    setAppsData(prev => ({
                        ...prev,
                        [app.id]: {
                            version: appInfo.version,
                            releaseDate: formattedDate,
                            releaseDateISO: appInfo.currentVersionReleaseDate,
                            releaseNotes: appInfo.releaseNotes || 'ÁÑ°Êõ¥Êñ∞Ë™™Êòé',
                            appName: appInfo.trackName,
                            artistName: appInfo.artistName,
                            artworkUrl: appInfo.artworkUrl512 || appInfo.artworkUrl100,
                            price: appInfo.formattedPrice,
                            rating: appInfo.averageUserRating,
                            ratingCount: appInfo.userRatingCount
                        }
                    }));
                } catch (error) {
                    console.error('Error fetching app info:', error);
                    setAppsData(prev => ({
                        ...prev,
                        [app.id]: { error: 'ÁÑ°Ê≥ïÂèñÂæó App Ë≥áË®äÔºö' + error.message }
                    }));
                } finally {
                    // Á¢∫‰øùËá≥Â∞ëÈ°ØÁ§∫ 1 ÁßíÁöÑËºâÂÖ•ÂãïÁï´
                    const elapsedTime = Date.now() - startTime;
                    const remainingTime = Math.max(0, 1000 - elapsedTime);
                    
                    setTimeout(() => {
                        setLoading(prev => ({ ...prev, [app.id]: false }));
                    }, remainingTime);
                }
            };

            const checkAllApps = async () => {
                setLastUpdated(new Date());
                setCheckingProgress({ current: 0, total: apps.length });
                
                for (let i = 0; i < apps.length; i++) {
                    setCheckingProgress({ current: i + 1, total: apps.length });
                    await fetchAppInfo(apps[i]);
                }
                
                // Ê™¢Êü•ÂÆåÊàêÂæåÊ∏ÖÈô§ÈÄ≤Â∫¶
                setTimeout(() => {
                    setCheckingProgress({ current: 0, total: 0 });
                }, 1000);
            };

            // ÊêúÂ∞ãÈÅéÊøæ
            const filteredApps = apps.filter(app => {
                if (!searchQuery) return true;
                const query = searchQuery.toLowerCase();
                const appName = appsData[app.id]?.appName || app.name;
                return appName.toLowerCase().includes(query);
            });

            // ÈñãÂïü App Store È†ÅÈù¢
            const openAppStore = (url) => {
                window.open(url, '_blank');
            };

            // Âà§Êñ∑ÊòØÂê¶Âú®7Êó•ÂÖßÊõ¥Êñ∞
            const isRecentlyUpdated = (appId) => {
                const data = appsData[appId];
                if (!data || !data.releaseDateISO) return false;
                const now = new Date();
                const release = new Date(data.releaseDateISO);
                const diffTime = Math.abs(now - release);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                return diffDays <= 7;
            };

            // Âà§Êñ∑ÊòØÂê¶Âú®24Â∞èÊôÇÂÖßÊõ¥Êñ∞
            const isNew24Hours = (appId) => {
                const data = appsData[appId];
                if (!data || !data.releaseDateISO) return false;
                const now = new Date();
                const release = new Date(data.releaseDateISO);
                const diffTime = Math.abs(now - release);
                const diffHours = diffTime / (1000 * 60 * 60);
                return diffHours <= 24;
            };

            // ÂàÜÈ°ûÂíåÊéíÂ∫è Apps
            const categorizedApps = filteredApps.reduce((acc, app) => {
                const data = appsData[app.id];
                if (data && !data.error && data.releaseDate) {
                    const isRecent = isRecentlyUpdated(app.id);
                    // ÂÑ≤Â≠òÂéüÂßã ISO Êó•ÊúüÂ≠ó‰∏≤Áî®ÊñºÊéíÂ∫è
                    if (isRecent) {
                        acc.recent.push({ 
                            ...app, 
                            releaseDate: data.releaseDate,
                            releaseDateISO: data.releaseDateISO
                        });
                    } else {
                        acc.older.push({ 
                            ...app, 
                            releaseDate: data.releaseDate,
                            releaseDateISO: data.releaseDateISO
                        });
                    }
                } else if (loading[app.id]) {
                    acc.loading.push(app);
                } else {
                    acc.older.push(app);
                }
                return acc;
            }, { recent: [], older: [], loading: [] });

            // ÊéíÂ∫èÔºö‰æùÁÖßÊõ¥Êñ∞Êó•ÊúüÁî±Êñ∞Âà∞Ëàä
            const sortByDate = (a, b) => {
                if (!a.releaseDateISO) return 1;
                if (!b.releaseDateISO) return -1;
                // ÊØîËºÉ ISO Êó•ÊúüÂ≠ó‰∏≤ÔºåÊñ∞ÁöÑÊó•ÊúüÊéíÂú®ÂâçÈù¢
                return new Date(b.releaseDateISO) - new Date(a.releaseDateISO);
            };

            categorizedApps.recent.sort(sortByDate);
            categorizedApps.older.sort(sortByDate);

            const renderAppCard = (app) => (
                <div key={app.id} className="app-card">
                    <div className="app-header">
                        <div 
                            className="app-icon"
                            onClick={() => openAppStore(app.url)}
                            title="Âú® App Store ‰∏≠Êü•Áúã"
                        >
                            {appsData[app.id] && appsData[app.id].artworkUrl ? (
                                <img src={appsData[app.id].artworkUrl} alt={app.name} style={{width: '100%', height: '100%', borderRadius: '14px'}} />
                            ) : (
                                app.name.charAt(0)
                            )}
                        </div>
                        <div className="app-info">
                            <h3 
                                onClick={() => openAppStore(app.url)}
                                title="Âú® App Store ‰∏≠Êü•Áúã"
                            >
                                {appsData[app.id] && appsData[app.id].appName ? appsData[app.id].appName : app.name}
                            </h3>
                            <div className="app-id">
                                {appsData[app.id] && appsData[app.id].artistName ? appsData[app.id].artistName : `ID: ${app.id}`}
                            </div>
                        </div>
                    </div>

                    {loading[app.id] ? (
                        <div>
                            <span className="status-badge status-loading">
                                <div className="spinner"></div>
                                Ê™¢Êü•‰∏≠
                            </span>
                            <LottieLoader />
                        </div>
                    ) : appsData[app.id] ? (
                        appsData[app.id].error ? (
                            <div className="error-message">
                                ‚ö†Ô∏è {appsData[app.id].error}
                            </div>
                        ) : (
                            <>
                                <span className="status-badge status-success">
                                    Â∑≤Ê™¢Êü•
                                </span>
                                {isNew24Hours(app.id) && (
                                    <span className="new-badge">
                                        üî• ÊúÄÊñ∞
                                    </span>
                                )}
                                <div className="version-info">
                                    <div className="version-header">
                                        <div className="version-number">
                                            v{appsData[app.id].version}
                                        </div>
                                        <div className="version-date">
                                            {appsData[app.id].releaseDate}
                                        </div>
                                    </div>
                                    {appsData[app.id].rating && (
                                        <div style={{marginTop: '0.8rem', fontSize: '0.9rem', color: 'var(--text-secondary)'}}>
                                            ‚≠ê {appsData[app.id].rating.toFixed(1)} ({(appsData[app.id].ratingCount || 0).toLocaleString()} ÂâáË©ïÂàÜ)
                                        </div>
                                    )}
                                    {appsData[app.id].releaseNotes && (
                                        <div className="release-notes">
                                            <h4>Êõ¥Êñ∞ÂÖßÂÆπ</h4>
                                            <p>{appsData[app.id].releaseNotes}</p>
                                        </div>
                                    )}
                                </div>
                            </>
                        )
                    ) : (
                        <div style={{ color: 'var(--text-secondary)', fontSize: '0.9rem' }}>
                            Â∞öÊú™Ê™¢Êü•
                        </div>
                    )}
                </div>
            );

            return (
                <div className="app-container">
                    <header className="header">
                        <h1>App Store ÁâàÊú¨Áõ£Ê∏¨</h1>
                        <p className="subtitle">Âç≥ÊôÇÁõ£Ê∏¨ÈäÄË°å App ÁâàÊú¨Êõ¥Êñ∞</p>
                    </header>

                    {/* ÊéßÂà∂ÂçÄ - Ê™¢Êü•ÊôÇÈö±Ëóè */}
                    {checkingProgress.total === 0 && (
                        <div className="controls">
                            <div className="search-box">
                                <span className="search-icon">üîç</span>
                                <input
                                    type="text"
                                    className="search-input"
                                    placeholder="ÊêúÂ∞ãÈäÄË°åÂêçÁ®±..."
                                    value={searchQuery}
                                    onChange={(e) => setSearchQuery(e.target.value)}
                                />
                            </div>
                            <button 
                                className="btn btn-primary" 
                                onClick={checkAllApps}
                                disabled={Object.values(loading).some(l => l)}
                            >
                                {Object.values(loading).some(l => l) ? 'Ê™¢Êü•‰∏≠...' : 'Ê™¢Êü•Êõ¥Êñ∞'}
                            </button>
                        </div>
                    )}

                    {/* ÈÄ≤Â∫¶ÊèêÁ§∫ */}
                    {checkingProgress.total > 0 && (
                        <div className="progress-indicator">
                            <div className="progress-text">
                                Ê≠£Âú®Ê™¢Êü• {checkingProgress.current} / {checkingProgress.total}
                            </div>
                            <div className="progress-bar-container">
                                <div 
                                    className="progress-bar" 
                                    style={{ width: `${(checkingProgress.current / checkingProgress.total) * 100}%` }}
                                ></div>
                            </div>
                        </div>
                    )}

                    {/* ËºâÂÖ•‰∏≠ÁöÑ Apps */}
                    {categorizedApps.loading.length > 0 && (
                        <>
                            <h2 className="section-title">
                                Ê™¢Êü•‰∏≠
                                <span className="section-badge">{categorizedApps.loading.length}</span>
                            </h2>
                            <div className="apps-grid">
                                {categorizedApps.loading.map(renderAppCard)}
                            </div>
                        </>
                    )}

                    {/* 7Êó•ÂÖßÊõ¥Êñ∞ */}
                    <h2 className="section-title">
                        Ëøë 7 Êó•Êõ¥Êñ∞
                        <span className="section-badge">{categorizedApps.recent.length}</span>
                    </h2>
                    {categorizedApps.recent.length > 0 ? (
                        <div className="apps-grid">
                            {categorizedApps.recent.map(renderAppCard)}
                        </div>
                    ) : (
                        <div className="empty-section">
                            <div className="empty-section-icon">üì≠</div>
                            <div>ÁõÆÂâçÊ≤íÊúâ 7 Êó•ÂÖßÊõ¥Êñ∞ÁöÑ App</div>
                        </div>
                    )}

                    {/* 7Êó•‰ª•‰∏äÊú™Êõ¥Êñ∞ */}
                    <h2 className="section-title">
                        7 Êó•‰ª•‰∏ä
                        <span className="section-badge">{categorizedApps.older.length}</span>
                    </h2>
                    {categorizedApps.older.length > 0 ? (
                        <div className="apps-grid">
                            {categorizedApps.older.map(renderAppCard)}
                        </div>
                    ) : (
                        <div className="empty-section">
                            <div className="empty-section-icon">‚ú®</div>
                            <div>ÊâÄÊúâ App ÈÉΩÂú® 7 Êó•ÂÖßÊõ¥Êñ∞ÈÅéÔºÅ</div>
                        </div>
                    )}

                    {lastUpdated && (
                        <div className="last-updated">
                            ‰∏äÊ¨°Êõ¥Êñ∞Ôºö{lastUpdated.toLocaleString('zh-TW')}
                        </div>
                    )}

                    <div style={{
                        textAlign: 'center',
                        marginTop: '3rem',
                        paddingTop: '2rem',
                        borderTop: '1px solid var(--border)',
                        color: 'var(--text-secondary)',
                        fontSize: '0.9rem'
                    }}>
                        ÂäüËÉΩÈñãÁôºÔºöËá¥Ë≥¢
                    </div>
                </div>
            );
        }

        ReactDOM.render(<AppStoreMonitor />, document.getElementById('root'));
    </script>
</body>
</html>
